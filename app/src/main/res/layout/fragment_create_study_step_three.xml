<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createStudyFragment_StepThree"
    android:background="?android:windowBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7">


        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_create_study_pageThreeTitle"
            android:textAlignment="center"
            android:textSize="35sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/pageDesc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="@string/fragment_create_study_desc_page_three"
            android:textAlignment="center"
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/createCategories"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:popupBackground="@color/green_Main"
            />

        <Spinner
            android:id="@+id/createExecutionType"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:popupBackground="@color/green_Main"
            />

    </LinearLayout>


</FrameLayout>