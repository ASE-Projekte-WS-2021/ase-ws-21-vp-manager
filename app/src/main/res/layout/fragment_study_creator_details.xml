<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/creator_studyFragmentHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="left"
                android:textSize="25sp"
                android:textStyle="bold" />



            <View
                android:id="@+id/creator_infoLine"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_below="@id/creator_infoSymbolStudyFragment"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right"
                android:background="@color/green_Main" />

            <View
                android:id="@+id/whiteviewTwo"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_below="@id/creator_infoSymbolStudyFragment"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-25dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/creator_infoSymbolStudyFragment"
                android:layout_width="94dp"
                android:layout_height="32dp"
                android:layout_below="@id/creator_studyFragmentHeader"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-14dp"
                app:elevation="4dp"
                app:srcCompat="@drawable/ic_baseline_info_24" />

            <!--<View
                android:id="@+id/creator_infoLineRight"
                android:layout_width="187dp"
                android:layout_height="3dp"
                android:layout_below="@id/creator_infoSymbolStudyFragment"
                android:layout_alignParentRight="true"
                android:background="@color/green_Main" />-->


            <TextView
                android:id="@+id/creator_descriptionTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creator_infoSymbolStudyFragment"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/maven_pro"
                android:text="@string/descTag"
                android:textColor="@color/tabs_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <TextView
                android:id="@+id/creator_descriptionStudyFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creator_descriptionTag"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <View
                android:id="@+id/sepOne"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/creator_descriptionStudyFragment"
                android:layout_marginTop="7dp"
                android:background="@color/color_two" />

            <TextView
                android:id="@+id/creator_vpTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sepOne"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/maven_pro"
                android:text="@string/vpTag"
                android:textColor="@color/tabs_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <TextView
                android:id="@+id/creator_vpValueStudyFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creator_vpTag"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <View
                android:id="@+id/sepThree"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/creator_vpValueStudyFragment"
                android:layout_marginTop="7dp"
                android:background="@color/color_two" />

            <TextView
                android:id="@+id/creator_categoryTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sepThree"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/maven_pro"
                android:text="@string/catTag"
                android:textColor="@color/tabs_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <TextView
                android:id="@+id/creator_categoryStudyFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creator_categoryTag"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <View
                android:id="@+id/sepFour"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/creator_categoryStudyFragment"
                android:layout_marginTop="7dp"
                android:background="@color/color_two" />

            <TextView
                android:id="@+id/creator_contactTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sepFour"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/maven_pro"
                android:text="@string/conTag"
                android:textColor="@color/tabs_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <TextView
                android:id="@+id/creator_contactInformationStudyFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creator_contactTag"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:weightSum="100" />



            <View
                android:id="@+id/sepSix"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/creator_contactInformationStudyFragment"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="15dp"
                android:background="@color/color_two" />







            <View
                android:id="@+id/infoLoc"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_below="@id/creator_locationSymbolStudyFragment"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right"
                android:background="@color/green_Main" />



            <View
                android:id="@+id/whiteviewOne"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="-25dp"
                android:layout_below="@id/creator_locationSymbolStudyFragment"
                android:layout_centerHorizontal="true"
                android:background = "@color/white"/>

            <ImageView
                android:id="@+id/creator_locationSymbolStudyFragment"
                android:layout_width="94dp"
                android:layout_height="32dp"
                android:layout_below="@id/sepSix"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="-13dp"
                app:elevation="4dp"
                app:srcCompat="@drawable/ic_round_location_on_24" />


            <TextView
                android:id="@+id/studyTypeTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/creator_locationSymbolStudyFragment"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/maven_pro"
                android:text="@string/typeTag"
                android:textColor="@color/tabs_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <TextView
                android:id="@+id/creator_studyTypeStudyFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studyTypeTag"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <View
                android:id="@+id/sepSeven"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/creator_studyTypeStudyFragment"
                android:layout_marginTop="7dp"
                android:background="@color/color_two" />

            <TextView
                android:id="@+id/creator_locationTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sepSeven"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/maven_pro"
                android:text="@string/locTag"
                android:textColor="@color/tabs_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <TextView
                android:id="@+id/creator_remoteStudyStudyFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creator_locationTag"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:weightSum="100" />


            <TextView
                android:id="@+id/creator_localStudyStudyFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creator_locationTag"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:weightSum="100" />

            <View
                android:id="@+id/sepEight"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/creator_localStudyStudyFragment"
                android:layout_marginTop="7dp"
                android:background="@color/color_two" />




            <!--<ImageView
                android:id="@+id/creator_editOwnStudyButton"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_below="@id/sepEight"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_baseline_edit_note_24_red" />-->

            <!--<View
                android:id="@+id/buttonSepOne"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/creator_editOwnStudyButton"
                android:layout_marginTop="5dp"
                android:background="@color/color_two" />

            <View
                android:id="@+id/buttonSepTwo"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/sepEight"
                android:layout_marginTop="-5dp"
                android:background="@color/color_two" />
-->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/creator_editOwnStudyButton"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sepEight"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/green_Main"
                android:text="Studie bearbeiten"
                app:icon="@drawable/ic_baseline_edit_note_24"
                app:borderWidth="3dp"
                app:elevation="4dp"
                app:strokeColor="@color/green_dark"
                app:strokeWidth="3dp"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/creator_changeStudyStateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/creator_editOwnStudyButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/heatherred_Main"
                android:text="Studie Abschließen"
                app:strokeColor="@color/heatherred_dark"
                app:strokeWidth="3dp"
                app:elevation="4dp"
                app:icon="@drawable/ic_baseline_close_24" />

        </RelativeLayout>


    </ScrollView>
</FrameLayout>