<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.createStudy.createStudyFragment_finalStep_two"
    android:background="?android:windowBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/fragment_create_study_pageFinalTitle"
            android:layout_weight="0.7"
            android:textAlignment="center"
            android:textSize="35sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/confirmDesc"
            android:textSize="15sp"
            android:fontFamily="@font/maven_pro"
            android:textStyle="bold"
            android:textColor="@color/heatherred_Main"
            android:gravity="top"
            android:background="@drawable/border">
        </com.google.android.material.textview.MaterialTextView>


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/confirmContact"
            android:textSize="15sp"
            android:fontFamily="@font/maven_pro"
            android:textStyle="bold"
            android:textColor="@color/heatherred_Main"
            android:gravity="top"
            android:background="@drawable/border">
        </com.google.android.material.textview.MaterialTextView>


    </LinearLayout>

</FrameLayout>