                </EditText>
            </com.google.android.material.card.MaterialCardView>-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cart_vp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:hint="VP-Stunden"
                android:textColorHint="@color/heatherred_Main"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/heatherred_Main">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_study_vp"
                    style="@style/You.EditText.Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cart_contact"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_vp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:hint="KOntakt - Mail"
                android:textColorHint="@color/heatherred_Main"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/heatherred_Main">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_study_contact"
                    style="@style/You.EditText.Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cart_phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_contact"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:hint="Kontakt - Tel.-Nr."
                android:textColorHint="@color/heatherred_Main"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/heatherred_Main">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_study_phone"
                    style="@style/You.EditText.Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cart_skype"
                android:layout_below="@+id/cart_phone"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:hint="Kontakt - Skype"
                android:textColorHint="@color/heatherred_Main"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/heatherred_Main">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_study_skype"
                    style="@style/You.EditText.Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cart_discord"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_skype"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:hint="Kontakt - Discord"
                android:textColorHint="@color/heatherred_Main"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/heatherred_Main">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_study_discord"
                    style="@style/You.EditText.Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cart_others"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_discord"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:hint="Kontakt - Weitere"
                android:textColorHint="@color/heatherred_Main"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/heatherred_Main">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_study_others"
                    style="@style/You.EditText.Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>




            -->
            <Button
                android:id="@+id/edit_saving_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_others"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:text="Save Study" />
        </RelativeLayout>


    </ScrollView>

