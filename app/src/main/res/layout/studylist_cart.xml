<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="5dp">
        <!--android:layout_height="80dp"-->

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textviewName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="17dp"
                android:fontFamily="@font/google_sans_medium"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewVP"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/google_sans_medium"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_marginBottom="2dp"
                android:textSize="17dp" />


            <ImageView
                android:id="@+id/infoSymbolStudyFragment"
                android:layout_width="99dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                app:srcCompat="@drawable/ic_baseline_category_24_white" />

            <TextView
                android:id="@+id/textviewCat"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginTop="-7dp"
                android:textStyle="italic"
                android:layout_marginStart= "100dp"
                android:fontFamily="@font/google_sans_medium"
                android:textColor="@color/white"
                android:textSize="17dp" />
            <TextView
                android:id="@+id/textviewTag"
                android:text="Studientyp: "
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginTop="-20dp"
                android:fontFamily="@font/google_sans_medium"
                android:textColor="@color/white"
                android:textSize="17dp" />





