<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.VPManager" parent="Theme.MaterialComponents.NoActionBar">

        <!--   Primary text colors.  -->

        <!--for text on primary color maybe use lightblue or white after Material Design convention-->
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColorHint">@color/lightorange_hint</item>




        <!--Primary brand color.-->
        <item name="colorPrimary">@color/blue_highlight</item>
        <item name="colorPrimaryVariant">@color/blue_highlightDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--Secondary brand color. -->
        <item name="colorSecondary">@color/orange_highlight</item>
        <item name="colorSecondaryVariant">@color/orange_highlightDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--more-->

        <item name="android:colorBackground">@color/lightblue_Main</item>
        <item name="colorOnBackground">@color/orange_highlight</item>
        <item name="colorSurface">@color/blue_highlight</item>
        <item name="colorOnSurface">@color/orange_highlight</item>

        <!--red and white-->
        <item name="colorError">@color/black</item>
        <item name="colorOnError">@color/red_error</item>


        <!--Status and navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_highlightDark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/blue_highlightDark</item>
        <!--Customize your theme here.-->


    </style>

    <style name="You.EditText.Style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>



